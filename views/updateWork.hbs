<h1>Update Works</h1>

<div class="bg-secondary">
  <div class="divider">
  </div>
</div>

<form class="adminForms" method="POST">

  <div>
    Title:
    <input type="text" name="title" value="{{works.title}}" />
  </div>
  <div>
    Link:
    <input
      type="url"
      name="link"
      value="{{works.link}}"
      placeholder="https://example.com"
    />
  </div>

  <div>
    Course:
    <input type="text" name="course" value="{{works.course}}" />
  </div>
  <div>
    Year:
    <input type="text" name="year" value="{{works.year}}" />
  </div>

  <input type="submit" value="UPDATE" />
</form>

<div class="bg-secondary">
  <div class="divider">
  </div>
</div>