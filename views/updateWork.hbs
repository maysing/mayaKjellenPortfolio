<h1>Update Works</h1>

<div class="bg-secondary">
    <div 
      class="divider">
    </div>
</div>

<form class="adminForms" 
      method="POST">
  
    <div>
        Title: 
        <input 
            type="text" 
            name="title" 
            value="{{title}}">
    </div>
     <div>
       Link: 
       <input 
            type="url" 
            name="link"
            value="{{link}}"
            placeholder="https://example.com">
        </div>
       
     <div>
        Course: 
        <input 
            type="text"
            name="course"
            value="{{course}}">
        </div>
    <div>
        Year: 
        <input 
            type="text" 
            name="year"
            value="{{year}}">
    </div>

        <input type="submit" value="UPDATE">
</form>

<div class="bg-secondary">
    <div 
      class="divider">
    </div>
</div>