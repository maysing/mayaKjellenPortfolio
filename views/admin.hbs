<h1>ADMINISTRATION</h1>

{{#if inputErrors.length}}
    <ul id="errorDisplay">
        {{#each inputErrors}}
            <li>{{this}}</li>
        {{/each}}
    </ul>
{{/if}}

<div class="bg-secondary">
    <div 
      class="divider">
    </div>
</div>

<form action="" method="POST">
    <div>
        Title: 
        <input 
            type="text" 
            name="title" 
            value="{{title}}">
    </div>
     <div>
       Link: 
       <input 
            type="url" 
            name="link"
            value="{{link}}"
            placeholder="https://example.com">
        </div>
       
     <div>
        Course: 
        <input 
            type="text"
            name="course"
            value="{{course}}">
        </div>
    <div>
        Year: 
        <input 
            type="text" 
            name="year"
            value="{{year}}">
    </div>

    <input id="postButton" type="submit" value="Post">

</form>

<div class="bg-secondary">
    <div 
      class="divider">
    </div>
</div>


<p>
    Add a new post to the Works page by filling in the form and press post
</p>
