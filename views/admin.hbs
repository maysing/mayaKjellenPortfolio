<h1 class="headings">A D M I N I S T R A T I O N</h1>

{{#if inputErrors.length}}
  <ul id="errorDisplay">
    {{#each inputErrors}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
{{/if}}

<div class="bg-secondary">
  <div class="divider">
  </div>
</div>

<form class="adminForms" action="" method="POST">
  <div>
    Title:
    <input type="text" name="title" value="{{title}}" />
  </div>
  <div>
    Link:
    <input
      type="url"
      name="link"
      value="{{link}}"
      placeholder="https://example.com"
    />
  </div>

  <div>
    Course:
    <input type="text" name="course" value="{{course}}" />
  </div>
  <div>
    Year:
    <input type="text" name="year" value="{{year}}" />
  </div>

  <input class="formButtons" type="submit" value="Post" />

</form>

<div class="bg-secondary">
  <div class="divider">
  </div>
</div>

<p>
  Add a new post to the Works page by filling in the form and press post
</p>

<a href="/logout" id="logout-button">Log Out</a>