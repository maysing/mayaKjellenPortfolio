<h1>{{work.title}}</h1>
{{#if work}}
	<a id="workLink" href="{{work.link}}">{{work.link}}</a>
    <p> {{work.course}}</p>
    <p> {{work.year}}</p>
    
    <form action="/delete-work/{{work.id}}" method="POST">
        <input class="formButtons" type="submit" value="DELETE">
    </form>

     <form action="/update-work/{{work.id}}">
        <input class="formButtons" type="submit" value="UPDATE">
    </form>

{{else}}
	<p>That work do not exist.</p>
{{/if}}